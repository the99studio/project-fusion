{
    "fusion": {
        "fusion_file": "project-fusioned.txt",
        "fusion_log": "project-fusion.log",
        "copyToClipboard": true
    },
    "parsedFileExtensions": {
        "backend": [
            ".cs",
            ".go",
            ".java",
            ".php",
            ".py",
            ".rb",
            ".rs"
        ],
        "config": [
            ".json",
            ".toml",
            ".xml",
            ".yaml",
            ".yml"
        ],
        "cpp": [
            ".c",
            ".cc",
            ".cpp",
            ".h",
            ".hpp"
        ],
        "scripts": [
            ".bat",
            ".cmd",
            ".ps1",
            ".sh"
        ],
        "web": [
            ".css",
            ".html",
            ".js",
            ".jsx",
            ".svelte",
            ".ts",
            ".tsx",
            ".vue"
        ]
    },
    "parsing": {
        "parseSubDirectories": true,
        "rootDirectory": "."
    },
    "ignorePatterns": [
        "# Project Fusion files",
        "project-fusion.json",
        "project-fusion.log",
        "project-fusioned.txt",
        "",
        "# Dependencies",
        "node_modules/",
        "package-lock.json",
        "pnpm-lock.yaml",
        "yarn.lock",
        "",
        "# Build output",
        "dist/",
        "build/",
        "*.min.js",
        "*.min.css",
        "",
        "# Environment and secrets",
        ".env",
        ".env.*",
        "*.key",
        "*.pem",
        "**/credentials/*",
        "**/secrets/*",
        "",
        "# Logs",
        "*.log",
        "logs/",
        "",
        "# OS files",
        ".DS_Store",
        "Thumbs.db",
        "",
        "# IDE files",
        ".vscode/",
        ".idea/",
        "*.swp",
        "*.swo"
    ],
    "useGitIgnoreForExcludes": true,
    "schemaVersion": 1
}
